* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    background-color: #000;
    color: #fff;
    line-height: 1.6;
    display: flex;
    justify-content: center;
    min-height: 100vh;
}

.container {
    width: 720px;
    padding: 20px;
}

header {
    text-align: center;
    margin-bottom: 40px;
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.profile-section {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 15px;
}

.profile-img {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    border: 3px solid #fff;
}

.verified-badge {
    width: 20px;
    height: 20px;
}

h1 {
    font-size: 32px;
    margin-bottom: 8px;
}

.username {
    color: #1DA1F2;
    font-size: 18px;
    margin-bottom: 8px;
}

.bio {
    font-size: 18px;
    color: #fff;
}

.link-card {
    display: block;
    background: #111;
    border-radius: 15px;
    padding: 20px;
    margin-bottom: 20px;
    text-decoration: none;
    color: #fff;
    transition: transform 0.2s;
    width: 720px;
    height: 320px;
    display: flex;
    align-items: center;
    overflow: hidden;
}

.link-card:hover {
    transform: scale(1.02);
}

.sorte-no-jogo {
    background: linear-gradient(45deg, #000, #1a472a);
    border: 1px solid #2ecc71;
}

.youtube {
    background: linear-gradient(45deg, #000, #4a0f0f);
    border: 1px solid #ff0000;
}

.card-logo {
    height: 40px;
    margin-bottom: 15px;
}

.youtube-icon img {
    height: 40px;
    margin-bottom: 15px;
}

.card-text {
    padding: 20px;
}

.card-text h2 {
    font-size: 24px;
    margin-bottom: 8px;
}

.card-text p {
    color: #ccc;
    font-size: 16px;
}
